        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.vCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vCodigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vDescripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dcPrecio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.imImagen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.vNombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.iId }) |
                @Html.ActionLink("Details", "Details", new { id=item.iId }) |
