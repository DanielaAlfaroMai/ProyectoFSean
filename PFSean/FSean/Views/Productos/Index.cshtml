@model IEnumerable<FSean.Models.Producto>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.vCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vCodigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vDescripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dcPrecio)
            </th>
